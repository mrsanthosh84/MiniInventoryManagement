<h1><%= action_name.capitalize %> Product</h1>

<%= form_with(model: @product, local: true) do |form| %>
  <% if @product.errors.any? %>
    <div>
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, placeholder: "Enter product name", required: true, style: "width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :category, class: "form-label" %>
    <%= form.text_field :category, placeholder: "Enter product category", required: true, style: "width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, placeholder: "Enter quantity", required: true, style: "width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, placeholder: "Enter price", required: true, step: '0.01', style: "width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :available, class: "form-label" %>
    <%= form.check_box :available %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn", style: "padding: 10px 15px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>

<%= link_to 'Back', products_path, style: "margin-top: 15px; display: inline-block; text-decoration: none; padding: 10px 15px; background-color: #f44336; color: white; border-radius: 4px;" %>
