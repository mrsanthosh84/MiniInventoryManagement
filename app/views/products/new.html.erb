<h1><%= action_name.capitalize %> Product</h1>

<%= form_with(model: @product, local: true) do |form| %>
  <% if @product.errors.any? %>
    <div style="color: red; margin-bottom: 20px;">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :name %>
    <%= form.text_field :name, style: 'width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :category %>
    <%= form.text_field :category, style: 'width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, style: 'width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :price %>
    <%= form.number_field :price, style: 'width: 50%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :available %>
    <%= form.check_box :available %> Available
  </div>

  <div>
    <%= form.submit "Save Product", style: 'background-color: #4CAF50; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;' %>
  </div>
<% end %>

<div style="margin-top: 20px;">
  <%= link_to 'Back', products_path, style: 'display: inline-block; background-color: #007BFF; color: white; padding: 10px 15px; border: none; border-radius: 4px; text-decoration: none; cursor: pointer;' %>
</div>
